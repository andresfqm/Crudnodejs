extends ../default
block content
  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
      h2(class=['ui', 'header', 'blue', 'dividing'])= 'Modificar descuento'

      div(class='form-nuevodescuento')
        form(class=['ui', 'form'] action='http://localhost:3000/editar' method='post')
          div(class=['ui', 'field'])
            label(for='id_descuento')='id_descuento'
            input(type= 'text' name='id_descuento' placeholder='ID Descuento' value = descuento[0].ID_DESCUENTO)
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='descuento')='descuento'
              input(type= 'text' name='descuento' placeholder='Descuento' value = descuento[0].DESCUENTO)
            div(class=['ui', 'field'])
              label(for='cantidad_minima')='cantidad_minima'
              input(type= 'text' name='cantidad_minima' placeholder='Cantidad Minima' value = descuento[0].CANTIDAD_MINIMA)
              input(type= 'hidden' name='descuentoID' value = descuento[0].ID_DESCUENTO)

          button(class=['ui', 'button', 'basic', 'black'])= 'Modificar descuento'
          div(class=['ui', 'message', 'error'])

  
          
  script(src='/javascripts/validacion.js')
                