extends ../default
block content
  include ../templates/nav

  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['ten', 'wide', 'column'])
      h2(class=['ui', 'header', 'blue', 'dividing'])= 'Crear descuento'

      div(class='form-nuevodescuento')
        form(class=['ui', 'form'] action='http://localhost:3000/creardescuento' method='post')
          div(class=['ui', 'field'])
            label(for='id_descuento')='id_descuento'
            input(type= 'text' name='id_descuento' placeholder='ID Descuento')
          div(class=['ui', 'two', 'fields'])
            div(class=['ui', 'field'])
              label(for='descuento')='descuento'
              input(type= 'text' name='descuento' placeholder='Descuento')
            div(class=['ui', 'field'])
              label(for='cantidad_minima')='cantidad_minima'
              input(type= 'text' name='cantidad_minima' placeholder='Cantidad Minima')

          button(class=['ui', 'button', 'basic', 'black'])= 'Crear descuento'
          div(class=['ui', 'message', 'error'])

     if info != undefined
      div(class=['ui', 'message', 'success'])
        i(class=['close', 'icon'])
        div(class='header')= 'Descuento registrado'
        p= info
          
  script(src='/javascripts/validacion.js')
                